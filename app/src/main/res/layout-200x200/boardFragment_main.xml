<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/board"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:columnCount="4"
    android:rowCount="4">

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@drawable/rect"
        android:id="@+id/tile_0"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@drawable/rect"
        android:id="@+id/tile_1"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@drawable/rect"
        android:id="@+id/tile_2"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="3"
        android:layout_row="0"
        android:background="@drawable/rect"
        android:id="@+id/tile_3"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@drawable/rect"
        android:id="@+id/tile_4"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@drawable/rect"
        android:id="@+id/tile_5"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@drawable/rect"
        android:id="@+id/tile_6"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="3"
        android:layout_row="1"
        android:background="@drawable/rect"
        android:id="@+id/tile_7"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_column="0"
        android:layout_row="2"
        android:background="@drawable/rect"
        android:id="@+id/tile_8"
        android:contentDescription="@string/tile"/>

    <ImageView
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
